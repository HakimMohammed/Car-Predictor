<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/bg_secondary" /> <!-- Background color -->
            <stroke
                android:width="1dp"
            android:color="@color/green" /> <!-- Green border color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_secondary" /> <!-- Background color -->
            <corners android:radius="10dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</selector>