<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Algorithms">

    <!-- Title -->
    <TextView
        android:id="@+id/algorithmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="monospace"
        android:text="Choose an algorithm"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/decision_tree_btn"
        android:layout_width="223dp"
        android:layout_height="51dp"
        android:layout_marginTop="144dp"
        android:backgroundTint="@color/green"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Decision Tree"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/algorithmTitle" />

    <Button
        android:id="@+id/bays_btn"
        android:layout_width="223dp"
        android:layout_height="52dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/green"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Bays Network"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decision_tree_btn" />

    <EditText
        android:id="@+id/k"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/dooot"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="K"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#D8D3CD"
        android:textColorHint="#D8D3CD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knn_btn" />

    <Button
        android:id="@+id/knn_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/green"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="KNN"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bays_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>